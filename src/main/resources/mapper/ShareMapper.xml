<?xml version="1.0" encoding="UTF-8" ?>  
<!DOCTYPE mapper PUBLIC "-//ibatis.apache.org//DTD Mapper 3.0//EN"      
 "http://ibatis.apache.org/dtd/ibatis-3-mapper.dtd">
<mapper namespace="org.tarena.note.dao.ShareDao">

<delete id="deleteByNoteId" parameterType="string">
delete from cn_share
where cn_note_id=#{noteId}
</delete>

<select id="findByNoteId" parameterType="string"
	resultType="org.tarena.note.entity.Share">
 select * from cn_share
 where cn_note_id=#{id}
</select>

<insert id="save" 
   parameterType="org.tarena.note.entity.Share">
	insert into cn_share
		(cn_share_id,cn_share_title,
		cn_share_body,cn_note_id,cn_share_time)
	values (#{cn_share_id},#{cn_share_title},
		#{cn_share_body},#{cn_note_id},#{cn_share_time})
</insert>

<select id="searchByTitle" parameterType="string" resultType="org.tarena.note.entity.Share">
   select * from cn_share where cn_share_title like #{title}
</select>
<select id="searchByShareId" parameterType="string" resultType="org.tarena.note.entity.Share">
  select * from cn_share where cn_note_id=#{noteId}
</select>

</mapper>